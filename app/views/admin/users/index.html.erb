<% provide(:title,"Memebers") %>

<div class="container">
  <h3>Members</h3>
  <%= link_to "Create new member", new_admin_user_path %>
  <div class="row">
    <%= will_paginate @users %>
    <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th width="200">Name</th>
            <th>Email</th>
            <th width="150">Course</th>
            <th width="160">Action</th>
          </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>&nbsp;</td>
            <td>
              <%= link_to "Show", [:admin, user] %> |&nbsp;
              <%= link_to "Edit", edit_admin_user_path(user) %> |&nbsp;
              <%= link_to "Destroy", [:admin, user], method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @users %>
  </div>
</div>