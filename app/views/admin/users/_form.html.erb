<%= form_for [:admin, @user], class:"form-signin" do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class:"input-block-level" %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, class:"input-block-level" %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password, class:"input-block-level" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, class:"input-block-level" %>
    </div>
    <div class="field">
      <%= f.check_box :admin %>
      <%= f.label :admin %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>